{% extends 'base.html.twig' %}

{% block title %}Services - RentAll{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    {# Hero section #}
    <section class="mb-8 text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Book Services
        </h1>
        <p class="mt-2 text-gray-600">
            Professional services to enhance your experience
        </p>
    </section>

    {# Search and Filter Form #}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        {{ form_start(searchForm, {'attr': {'class': 'space-y-4'}}) }}
            {# Search Query #}
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fa-solid fa-search mr-1"></i> Search
                </label>
                {{ form_widget(searchForm.query) }}
            </div>

            {# Filters Row #}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-tag mr-1"></i> Category
                    </label>
                    {{ form_widget(searchForm.category) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-map-marker-alt mr-1"></i> Location
                    </label>
                    {{ form_widget(searchForm.location) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-euro-sign mr-1"></i> Min Price
                    </label>
                    {{ form_widget(searchForm.minPrice) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-euro-sign mr-1"></i> Max Price
                    </label>
                    {{ form_widget(searchForm.maxPrice) }}
                </div>
            </div>

            {# Sort and Submit Row #}
            <div class="flex flex-col sm:flex-row gap-4 items-end">
                <div class="flex-1">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-sort mr-1"></i> Sort By
                    </label>
                    {{ form_widget(searchForm.sortBy) }}
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors">
                        <i class="fa-solid fa-search mr-2"></i>Search
                    </button>
                    <a href="{{ path('app_services') }}" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium transition-colors">
                        <i class="fa-solid fa-times mr-2"></i>Clear
                    </a>
                </div>
            </div>
        {{ form_end(searchForm) }}
    </div>

    {# Results count #}
    <div class="mb-4 text-sm text-gray-600">
        <i class="fa-solid fa-list mr-1"></i>
        {{ servicesWithScores|length }} {{ servicesWithScores|length == 1 ? 'service' : 'services' }} found
    </div>

    {# Services grid #}
    <section>
        {% if servicesWithScores|length > 0 %}
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {% for item in servicesWithScores %}
                    {% set service = item.service %}
                    {% set qualityScore = item.qualityScore %}
                    <div class="rounded-lg border border-gray-200 bg-white shadow-sm hover:shadow-md transition-shadow">
                        {# Service Image #}
                        {% if service.imageName %}
                            <img src="{{ asset('uploads/services/' ~ service.imageName) }}" 
                                 alt="{{ service.name }}" 
                                 class="w-full h-48 object-cover rounded-t-lg">
                        {% else %}
                            <div class="w-full h-48 bg-gradient-to-br from-blue-100 to-blue-200 rounded-t-lg flex items-center justify-center">
                                <i class="fa-solid fa-briefcase text-blue-400 text-5xl"></i>
                            </div>
                        {% endif %}
                        
                        <div class="p-6 space-y-4">
                            {# Quality Score Badge #}
                            <div class="flex items-center justify-between mb-3">
                                {# Category badge #}
                                {% if service.category %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        <i class="{{ service.category.icon }} mr-1"></i>
                                        {{ service.category.name }}
                                    </span>
                                {% endif %}
                                
                                {# Quality Score #}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ qualityScore.rating.bgClass }} {{ qualityScore.rating.textClass }}">
                                    <i class="fa-solid {{ qualityScore.rating.icon }} mr-1"></i>
                                    {{ qualityScore.percentage }}%
                                </span>
                            </div>
                            
                            {# Service header #}
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h3 class="font-semibold text-lg text-gray-900">{{ service.name }}</h3>
                                    {% if service.location %}
                                        <p class="text-sm text-gray-500 mt-1">
                                            <svg class="inline h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            </svg>
                                            {{ service.location }}
                                        </p>
                                    {% endif %}
                                </div>
                                <div class="text-right">
                                    <p class="text-2xl font-bold text-gray-900">â‚¬{{ service.basePrice }}</p>
                                    <p class="text-xs text-gray-500">{{ service.durationMinutes }} min</p>
                                </div>
                            </div>

                            {# Service description #}
                            {% if service.description %}
                                <p class="text-sm text-gray-600">
                                    {{ service.description|length > 100 ? service.description|slice(0, 100) ~ '...' : service.description }}
                                </p>
                            {% endif %}

                            {# Host info #}
                            <p class="text-sm text-gray-500">
                                <svg class="inline h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Provided by {{ service.host.name }}
                            </p>

                            {# View details and favorite buttons #}
                            <div class="flex gap-2">
                                <a 
                                    href="{{ path('app_service_show', {id: service.id}) }}"
                                    class="flex-1 text-center px-4 py-2 rounded-md bg-blue-600 text-white hover:bg-blue-700 font-medium text-sm transition-colors"
                                >
                                    View Details
                                </a>
                                {% if app.user %}
                                    <form method="post" action="{{ path('app_favorites_toggle', {type: 'service', id: service.id}) }}" class="inline">
                                        <button type="submit" class="px-4 py-2 rounded-md {{ item.isFavorite ? 'bg-red-100 text-red-600 hover:bg-red-200' : 'bg-gray-100 text-gray-600 hover:bg-gray-200' }} font-medium text-sm transition-colors">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {# Empty state #}
            <div class="flex flex-col items-center justify-center py-12 text-center">
                <div class="rounded-full bg-gray-100 p-6">
                    <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h3 class="mt-4 text-lg font-medium text-gray-900">No services found</h3>
                <p class="mt-1 text-gray-600">
                    Check back later for available services
                </p>
            </div>
        {% endif %}
    </section>
</div>
{% endblock %}
