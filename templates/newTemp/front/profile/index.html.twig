{% extends 'front/base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <section class="container mx-auto px-4 py-10">
        <div class="max-w-2xl mx-auto bg-white border border-gray-200 rounded-xl shadow-sm p-6">
            <div class="flex items-center gap-4 mb-6">
                <div class="w-14 h-14 rounded-full bg-gray-200 text-gray-700 flex items-center justify-center text-xl font-semibold">
                    {{ app.user.email|default('U')|first|upper }}
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Mon profil</h1>
                    <p class="text-sm text-gray-500">{{ app.user.email|default('') }}</p>
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="rounded-lg border border-gray-200 p-4">
                    <p class="text-xs uppercase tracking-wide text-gray-500">User ID</p>
                    <p class="text-base font-medium text-gray-900 mt-1">{{ app.user.id }}</p>
                </div>
                <div class="rounded-lg border border-gray-200 p-4">
                    <p class="text-xs uppercase tracking-wide text-gray-500">Email</p>
                    <p class="text-base font-medium text-gray-900 mt-1">{{ app.user.email }}</p>
                </div>
                <div class="rounded-lg border border-gray-200 p-4 sm:col-span-2">
                    <p class="text-xs uppercase tracking-wide text-gray-500">Roles</p>
                    <div class="mt-2 flex flex-wrap gap-2">
                        {% for role in app.user.roles %}
                            <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700">{{ role }}</span>
                        {% endfor %}
                    </div>
                </div>
                <div class="rounded-lg border border-gray-200 p-4 sm:col-span-2">
                    <p class="text-xs uppercase tracking-wide text-gray-500">Verification</p>
                    <p class="text-base font-medium mt-1 {% if app.user.isVerified %}text-green-700{% else %}text-amber-700{% endif %}">
                        {% if app.user.isVerified %}Verified{% else %}Not verified{% endif %}
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

