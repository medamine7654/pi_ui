                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Icon</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tools</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for stat in stats %}
                    {% if stat.type == 'tool' %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <i class="{{ stat.icon }} text-2xl text-purple-600"></i>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">
                                {{ stat.name }}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                {{ stat.description|default('No description') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                                    {{ stat.toolCount }} tools
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <a href="{{ path('admin_category_edit', {id: stat.id}) }}" class="text-blue-600 hover:text-blue-900">
                                    <i class="fa-solid fa-edit"></i> Edit
                                </a>
                                {% if stat.toolCount == 0 %}
                                    <form method="post" action="{{ path('admin_category_delete', {id: stat.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <button type="submit" class="text-red-600 hover:text-red-900">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
