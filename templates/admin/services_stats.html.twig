{% extends 'admin/base.html.twig' %}
{% block title %}Stats Services - Admin{% endblock %}
{% block body %}
<div class="mb-6 flex items-center justify-between">
  <h1 class="text-2xl font-bold text-dark font-heading">Statistiques services</h1>
  <a href="{{ path('admin_services') }}" class="px-3 py-2 rounded-lg border border-gray-200 bg-white text-sm hover:bg-gray-50">Retour liste</a>
</div>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
  <div class="bg-white rounded-xl p-6 shadow-sm"><p class="text-sm text-gray-500">Total</p><p class="text-3xl font-bold">{{ stats.total }}</p></div>
  <div class="bg-white rounded-xl p-6 shadow-sm"><p class="text-sm text-gray-500">Aujourd'hui</p><p class="text-3xl font-bold">{{ stats.today }}</p></div>
  <div class="bg-white rounded-xl p-6 shadow-sm"><p class="text-sm text-gray-500">A venir</p><p class="text-3xl font-bold">{{ stats.upcoming }}</p></div>
  <div class="bg-white rounded-xl p-6 shadow-sm"><p class="text-sm text-gray-500">Passes</p><p class="text-3xl font-bold">{{ stats.past }}</p></div>
</div>
{% endblock %}
