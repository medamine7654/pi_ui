{% extends 'admin/base.html.twig' %}
{% block title %}Modifier Materiel - Admin{% endblock %}
{% block body %}
<div class="mb-6 flex items-center justify-between">
  <h1 class="text-2xl font-bold text-dark font-heading">Modifier materiel #{{ tool.id }}</h1>
  <a href="{{ path('admin_tools') }}" class="px-3 py-2 rounded-lg border border-gray-200 bg-white text-sm hover:bg-gray-50">Retour</a>
</div>
{% for message in app.flashes('error') %}
  <div class="mb-3 rounded-lg border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-700">{{ message }}</div>
{% endfor %}
<div class="bg-white rounded-xl p-6 shadow-sm max-w-2xl">
  <form method="post" class="space-y-4">
    <input type="hidden" name="_token" value="{{ csrf_token('edit-tool' ~ tool.id) }}">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
      <input name="nom" value="{{ tool.nom }}" required class="w-full rounded-lg border border-gray-200 bg-gray-50 px-3 py-2 text-sm">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Etat</label>
      <input name="etat" value="{{ tool.etat }}" class="w-full rounded-lg border border-gray-200 bg-gray-50 px-3 py-2 text-sm">
    </div>
    <label class="inline-flex items-center gap-2 text-sm text-gray-700">
      <input type="checkbox" name="disponible" value="1" {% if tool.disponible %}checked{% endif %} class="rounded border-gray-300">
      Disponible
    </label>
    <div>
      <button class="px-4 py-2 rounded-lg bg-primary text-white text-sm">Enregistrer</button>
    </div>
  </form>
</div>
{% endblock %}
