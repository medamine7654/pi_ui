{% extends 'base.html.twig' %}

{% block title %}Moderate Services{% endblock %}

{% block body %}
<h1>Moderate Services</h1>

<div class="table-responsive mt-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Host</th>
                <th>Price</th>
                <th>Location</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.name }}</td>
                    <td>{{ service.host.name }}</td>
                    <td>â‚¬{{ service.basePrice }}</td>
                    <td>{{ service.location }}</td>
                    <td>
                        {% if service.isActive %}
                            <span class="badge bg-success">Active</span>
                        {% else %}
                            <span class="badge bg-warning">Pending</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if service.isActive %}
                            <form method="post" action="{{ path('admin_service_hide', {id: service.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('hide' ~ service.id) }}">
                                <button type="submit" class="btn btn-sm btn-warning">Hide</button>
                            </form>
                        {% else %}
                            <form method="post" action="{{ path('admin_service_approve', {id: service.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ service.id) }}">
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No services to moderate.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
