{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Login</h4>
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Password</label>
                        <input type="password" name="_password" id="inputPassword" class="form-control" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary w-100" type="submit">Sign in</button>
                </form>

                <div class="mt-3">
                    <p class="text-muted">Test accounts:</p>
                    <ul class="small">
                        <li>Admin: admin@test.com / admin123</li>
                        <li>Host: host@test.com / host123</li>
                        <li>Guest: guest@test.com / guest123</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
