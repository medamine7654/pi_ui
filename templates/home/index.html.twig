{% extends 'base.html.twig' %}

{% block title %}Trouvez votre logement idéal - RentAll{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        {# Hero section #}
        <section class="mb-12 text-center">
            <h1 class="text-5xl font-bold tracking-tight text-gray-900 mb-4">
                Trouvez votre logement idéal
            </h1>
            <p class="text-xl text-gray-600">
                Découvrez des logements uniques partout en France
            </p>
        </section>

        {# Results count #}
        <div class="mb-6">
            <p class="text-lg text-gray-700">
                <span class="font-semibold">{{ logements|length }}</span> logement{{ logements|length > 1 ? 's' : '' }} disponible{{ logements|length > 1 ? 's' : '' }}
            </p>
        </div>

        {# Logements grid #}
        <section>
            {% if logements|length > 0 %}
                <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                    {% for logement in logements %}
                        <a href="{{ path('app_logement_show', {id: logement.id}) }}" class="block group">
                            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform hover:scale-105 hover:shadow-xl">
                                {# Image #}
                                <div class="relative aspect-square overflow-hidden">
                                    {% if logement.image %}
                                        <img src="{{ logement.image }}" 
                                             alt="{{ logement.titre }}"
                                             class="w-full h-full object-cover">
                                    {% else %}
                                        <div class="w-full h-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                                            <svg class="w-20 h-20 text-white opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                            </svg>
                                        </div>
                                    {% endif %}
                                    
                                    {# Type badge #}
                                    {% if logement.type %}
                                        <div class="absolute top-3 left-3">
                                            <span class="inline-flex items-center bg-white/90 backdrop-blur-sm text-gray-900 px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
                                                {{ logement.type }}
                                            </span>
                                        </div>
                                    {% endif %}
                                </div>

                                {# Card content #}
                                <div class="p-5">
                                    <h3 class="font-bold text-lg text-gray-900 mb-2 line-clamp-1 group-hover:text-blue-600 transition">
                                        {{ logement.titre }}
                                    </h3>
                                    <p class="text-sm text-gray-600 mb-3 line-clamp-1">
                                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        </svg>
                                        {{ logement.adresse }}
                                    </p>
                                    
                                    <div class="flex items-center gap-4 text-sm text-gray-600 mb-4">
                                        <span class="inline-flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                            </svg>
                                            {{ logement.nombreChambres }} ch.
                                        </span>
                                        {% if logement.capacite %}
                                            <span class="inline-flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                                </svg>
                                                {{ logement.capacite }} pers.
                                            </span>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="pt-3 border-t border-gray-200">
                                        <p class="text-2xl font-bold text-gray-900">
                                            {{ logement.prixParNuit }}€
                                            <span class="text-sm font-normal text-gray-600">/ nuit</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                {# Empty state #}
                <div class="flex flex-col items-center justify-center py-16 text-center">
                    <div class="rounded-full bg-gray-100 p-8 mb-6">
                        <svg class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Aucun logement disponible</h3>
                    <p class="text-gray-600">
                        Revenez plus tard pour découvrir de nouveaux logements
                    </p>
                </div>
            {% endif %}
        </section>
    </div>
</div>
{% endblock %}
