{% extends 'base.html.twig' %}

{% block title %}{{ logement.title }} - RentAll{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {# Back button #}
    <a href="{{ path('app_home') }}" class="inline-flex items-center text-gray-600 hover:text-gray-900 mb-6">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to listings
    </a>

    {# Title and location #}
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">{{ logement.title }}</h1>
        <div class="flex items-center mt-2 text-gray-600">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            {{ logement.city }}, {{ logement.country }}
        </div>
    </div>

    {# Image gallery #}
    <div class="mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {% if logement.imageUrls|length > 0 %}
                <div class="col-span-1">
                    <img src="{{ logement.imageUrls[0] }}" alt="{{ logement.title }}" class="w-full h-96 object-cover rounded-lg">
                </div>
                {% if logement.imageUrls|length > 1 %}
                    <div class="grid grid-cols-2 gap-4">
                        {% for image in logement.imageUrls|slice(1, 4) %}
                            <img src="{{ image }}" alt="{{ logement.title }} - Image {{ loop.index + 1 }}" class="w-full h-44 object-cover rounded-lg">
                        {% endfor %}
                    </div>
                {% endif %}
            {% else %}
                <div class="col-span-2 bg-gray-200 h-96 rounded-lg flex items-center justify-center">
                    <span class="text-gray-500">No images available</span>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {# Left column: Details #}
        <div class="lg:col-span-2">
            {# Host info #}
            <div class="mb-8 p-6 border border-gray-200 rounded-lg">
                <div class="flex items-center mb-4">
                    {% if logement.host.avatar %}
                        <img src="{{ logement.host.avatar }}" alt="{{ logement.host.name }}" class="w-12 h-12 rounded-full mr-4">
                    {% endif %}
                    <div>
                        <h3 class="font-semibold">Hosted by {{ logement.host.name }}</h3>
                        <p class="text-sm text-gray-600">Joined {{ logement.host.createdAt|date('M Y') }}</p>
                    </div>
                </div>
                <p class="text-gray-700">{{ logement.description }}</p>
            </div>

            {# Amenities #}
            <div class="mb-8">
                <h2 class="text-2xl font-bold mb-4">What this place offers</h2>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>WiFi</span>
                    </div>
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>Kitchen</span>
                    </div>
                    <!-- Add more amenities -->
                </div>
            </div>
        </div>

        {# Right column: Booking card #}
        <div class="lg:col-span-1">
            <div class="sticky top-6 p-6 border border-gray-200 rounded-lg shadow-lg">
                <div class="flex justify-between items-center mb-4">
                    <div>
                        <span class="text-2xl font-bold">${{ logement.price }}</span>
                        <span class="text-gray-600"> / night</span>
                    </div>
                    {% if logement.reviews|length > 0 %}
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <span>{{ logement.getAverageRating() }} Â· {{ logement.reviews|length }} reviews</span>
                        </div>
                    {% endif %}
                </div>

                {# Availability calendar would go here #}
                
                {% if app.user %}
                    <a href="{{ path('reservation_new', {'id': logement.id}) }}" 
                       class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-indigo-700 transition-colors text-center block">
                        Reserve
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" 
                       class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-indigo-700 transition-colors text-center block">
                        Login to Book
                    </a>
                {% endif %}

                {# Host actions #}
                {% if app.user and app.user.id == logement.host.id %}
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <a href="{{ path('logement_edit', {'id': logement.id}) }}" 
                           class="block w-full text-center bg-gray-100 text-gray-800 py-2 px-4 rounded-lg hover:bg-gray-200 mb-2">
                            Edit Listing
                        </a>
                        
                        <form action="{{ path('logement_toggle_availability', {'id': logement.id}) }}" method="post" class="mb-2">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ logement.id) }}">
                            <button type="submit" class="w-full text-center {{ logement.isAvailable ? 'bg-yellow-100 text-yellow-800 hover:bg-yellow-200' : 'bg-green-100 text-green-800 hover:bg-green-200' }} py-2 px-4 rounded-lg">
                                {{ logement.isAvailable ? 'Mark as Unavailable' : 'Mark as Available' }}
                            </button>
                        </form>
                    </div>
                {% endif %}

                {# Report button for guests #}
                {% if app.user and app.user.id != logement.host.id %}
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <button onclick="document.getElementById('reportModal').classList.remove('hidden')"
                                class="w-full text-center text-red-600 hover:text-red-800 text-sm">
                            Report this listing
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Report Modal #}
<div id="reportModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Report this listing</h3>
            <form action="{{ path('logement_report', {'id': logement.id}) }}" method="post">
                <textarea name="reason" rows="4" class="w-full p-2 border rounded mb-4" placeholder="Why are you reporting this listing?"></textarea>
                <input type="hidden" name="_token" value="{{ csrf_token('report' ~ logement.id) }}">
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="document.getElementById('reportModal').classList.add('hidden')"
                            class="px-4 py-2 text-gray-700 border rounded hover:bg-gray-100">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                        Report
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}