{% extends 'base.html.twig' %}

{% block title %}{{ home.title }} - RentAll{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <div class="max-w-6xl mx-auto">
        {# Back button #}
        <div class="mb-6">
            <a href="{{ path('app_homes') }}" class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to Homes
            </a>
        </div>

        {# Home details card #}
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            {# Image Gallery Placeholder #}
            <div class="h-96 bg-gray-200 flex items-center justify-center">
                <svg class="h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span class="text-gray-500 ml-2">Home Image Gallery</span>
            </div>

            <div class="p-8">
                {# Header #}
                <div class="flex items-start justify-between mb-6">
                    <div class="flex-1">
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ home.title }}</h1>
                        <p class="text-gray-600 flex items-center">
                            <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            {{ home.fullAddress }}
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-4xl font-bold text-blue-600">â‚¬{{ home.pricePerNight }}</p>
                        <p class="text-sm text-gray-500">per night</p>
                    </div>
                </div>

                {# Description #}
                {% if home.description %}
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-2">About this home</h2>
                        <p class="text-gray-600 leading-relaxed">{{ home.description }}</p>
                    </div>
                {% endif %}

                {# Home details grid #}
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                    <div class="bg-gray-50 rounded-lg p-4 text-center">
                        <svg class="h-6 w-6 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                        <p class="text-2xl font-bold text-gray-900">{{ home.maxGuests }}</p>
                        <p class="text-sm text-gray-500">Guests</p>
                    </div>

                    <div class="bg-gray-50 rounded-lg p-4 text-center">
                        <svg class="h-6 w-6 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2 2 2 2-2 2 2 2-2 2 2 2-2 2 2 2-2 2 2M3 12v6h18v-6M3 12l2 2 2-2 2 2 2-2 2 2 2-2 2 2 2-2 2 2 2-2 2 2"/>
                        </svg>
                        <p class="text-2xl font-bold text-gray-900">{{ home.bedrooms }}</p>
                        <p class="text-sm text-gray-500">Bedrooms</p>
                    </div>

                    <div class="bg-gray-50 rounded-lg p-4 text-center">
                        <svg class="h-6 w-6 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                        <p class="text-2xl font-bold text-gray-900">{{ home.beds }}</p>
                        <p class="text-sm text-gray-500">Beds</p>
                    </div>

                    <div class="bg-gray-50 rounded-lg p-4 text-center">
                        <svg class="h-6 w-6 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                        </svg>
                        <p class="text-2xl font-bold text-gray-900">{{ home.bathrooms }}</p>
                        <p class="text-sm text-gray-500">Bathrooms</p>
                    </div>
                </div>

                {# Amenities #}
                {% if home.amenities %}
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4">Amenities</h2>
                        <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                            {% for amenity in home.amenities %}
                                <div class="flex items-center text-gray-600">
                                    <svg class="h-5 w-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                    {{ amenity|replace({'_': ' '})|title }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {# Owner information #}
                <div class="border-t border-gray-200 pt-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Hosted by</h2>
                    <div class="flex items-center">
                        <div class="h-12 w-12 rounded-full bg-blue-600 flex items-center justify-center text-white font-bold text-lg">
                            {{ home.host.name|first|upper }}
                        </div>
                        <div class="ml-4">
                            <p class="font-medium text-gray-900">{{ home.host.name }}</p>
                            <p class="text-sm text-gray-500">{{ home.host.email }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}