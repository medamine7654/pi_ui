{% extends 'base.html.twig' %}

{% block title %}Réserver - RentAll{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
            <div class="mb-8">
                <h1 class="text-4xl font-bold text-gray-900 mb-2">Réserver ce logement</h1>
                <p class="text-gray-600 text-lg">Choisissez vos dates de séjour</p>
            </div>

            <div class="grid lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2">
                    <div class="bg-white p-8 rounded-xl shadow-lg">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">Dates de séjour</h2>
                        
                        <form method="post">
                            <div class="space-y-6">
                                <div class="grid md:grid-cols-2 gap-6">
                                    <div>
                                        <label for="dateArrivee" class="block text-sm font-semibold text-gray-700 mb-2">
                                            Date d'arrivée
                                        </label>
                                        <input type="date" 
                                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" 
                                               id="dateArrivee" 
                                               name="dateArrivee" 
                                               required>
                                    </div>

                                    <div>
                                        <label for="dateDepart" class="block text-sm font-semibold text-gray-700 mb-2">
                                            Date de départ
                                        </label>
                                        <input type="date" 
                                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" 
                                               id="dateDepart" 
                                               name="dateDepart" 
                                               required>
                                    </div>
                                </div>

                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                    <p class="text-sm text-blue-800">Le système vérifie automatiquement les disponibilités.</p>
                                </div>

                                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                                    <p class="text-sm text-yellow-800"><strong>Politique d'annulation:</strong> Annulation gratuite jusqu'à 3 jours avant l'arrivée.</p>
                                </div>

                                <div class="flex gap-4">
                                    <button type="submit" class="flex-1 bg-blue-600 text-white py-4 rounded-lg hover:bg-blue-700 font-bold text-lg shadow-lg">
                                        Confirmer la réservation
                                    </button>
                                    <a href="{{ path('app_home') }}" 
                                       class="flex-1 bg-gray-200 text-gray-800 py-4 rounded-lg hover:bg-gray-300 font-semibold text-center flex items-center justify-center">
                                        Annuler
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="lg:col-span-1">
                    <div class="bg-white p-6 rounded-xl shadow-lg">
                        {% if logement.image %}
                            <img src="{{ logement.image }}" class="w-full h-48 object-cover rounded-lg mb-4" alt="{{ logement.titre }}">
                        {% endif %}
                        
                        <h3 class="text-xl font-bold text-gray-900 mb-2">{{ logement.titre }}</h3>
                        <p class="text-gray-600 text-sm mb-4">{{ logement.adresse }}</p>
                        
                        <div class="mb-4">
                            <span class="inline-flex items-center bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
                                {{ logement.nombreChambres }} chambre(s)
                            </span>
                        </div>

                        <div class="border-t border-gray-200 pt-4">
                            <div class="flex justify-between mb-2">
                                <span class="text-gray-600">Prix par nuit</span>
                                <span class="font-semibold text-gray-900">{{ logement.prixParNuit }} euros</span>
                            </div>
                            <div class="flex justify-between mb-2">
                                <span class="text-gray-600">Frais de service</span>
                                <span class="font-semibold text-gray-900">0 euros</span>
                            </div>
                            <div class="border-t border-gray-200 pt-3 flex justify-between">
                                <span class="font-bold text-gray-900">Total estimé</span>
                                <span class="font-bold text-blue-600 text-xl">{{ logement.prixParNuit }} euros</span>
                            </div>
                            <p class="text-xs text-gray-500 mt-2">Le montant final sera calculé selon le nombre de nuits</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
