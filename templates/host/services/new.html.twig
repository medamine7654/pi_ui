{% extends 'base.html.twig' %}

{% block title %}Create Service - Host Dashboard{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <div class="max-w-2xl mx-auto">
        {# Back button #}
        <div class="mb-6">
            <a href="{{ path('host_services') }}" class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to My Services
            </a>
        </div>

        {# Page Header #}
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Create New Service</h1>
            <p class="text-gray-600 mt-1">Add a new service to your offerings</p>
        </div>

        {# Form Card #}
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            {{ form_start(form) }}
                <div class="space-y-6">
                    <div>
                        {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div>
                        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent', 'rows': 4}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div>
                        {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.category) }}
                        <p class="mt-1 text-sm text-gray-500">Select the category that best describes your service</p>
                    </div>

                    <div>
                        {{ form_label(form.basePrice, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.basePrice, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.basePrice) }}
                        
                        {# AI Price Suggestion #}
                        <div id="price-suggestion-service" class="mt-3 hidden">
                            <div class="flex items-start gap-2 p-3 bg-gradient-to-r from-blue-50 to-purple-50 border border-blue-200 rounded-lg">
                                <i class="fas fa-magic text-blue-600 mt-0.5"></i>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-gray-900">
                                        Suggested Price: <span id="suggested-price-service" class="text-blue-600 font-bold">€0</span>
                                    </p>
                                    <p class="text-xs text-gray-600 mt-1">
                                        Based on <span id="similar-count-service">0</span> similar services in this category
                                    </p>
                                    <button type="button" id="use-suggested-price-service" class="mt-2 text-xs text-blue-600 hover:text-blue-800 font-medium">
                                        Click to use this price →
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        {{ form_label(form.durationMinutes, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.durationMinutes, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.durationMinutes) }}
                    </div>

                    <div>
                        {{ form_label(form.imageFile, 'Service Image', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.imageFile, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.imageFile) }}
                        <p class="mt-1 text-sm text-gray-500">Max 5MB. Formats: JPG, PNG, GIF</p>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
                        <div class="flex">
                            <svg class="h-5 w-5 text-blue-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <p class="text-sm text-blue-700">Your service will be pending until approved by an administrator.</p>
                        </div>
                    </div>

                    <div class="flex gap-3 pt-4">
                        <button type="submit" class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium transition-colors">
                            Create Service
                        </button>
                        <a href="{{ path('host_services') }}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 font-medium transition-colors">
                            Cancel
                        </a>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Get form elements by querySelector to handle Symfony's generated IDs
    const categorySelect = document.querySelector('select[name="service[category]"]');
    const priceInput = document.querySelector('input[name="service[basePrice]"]');
    const suggestionBox = document.getElementById('price-suggestion-service');
    const suggestedPriceSpan = document.getElementById('suggested-price-service');
    const similarCountSpan = document.getElementById('similar-count-service');
    const useButton = document.getElementById('use-suggested-price-service');
    
    // Pre-calculated price suggestions from server
    const priceSuggestions = {{ priceSuggestions|json_encode|raw }};
    
    let currentSuggestion = null;
    
    // Listen for category changes
    if (categorySelect) {
        categorySelect.addEventListener('change', function() {
            const categoryId = this.value;
            
            if (!categoryId) {
                suggestionBox.classList.add('hidden');
                return;
            }
            
            fetchPriceSuggestion(categoryId);
        });
    }
    
    // Click to use suggested price
    if (useButton) {
        useButton.addEventListener('click', function() {
            if (currentSuggestion) {
                priceInput.value = currentSuggestion;
                priceInput.focus();
            }
        });
    }
    
    function fetchPriceSuggestion(categoryId) {
        const suggestion = priceSuggestions[categoryId];
        
        if (suggestion && suggestion.count > 0) {
            currentSuggestion = suggestion.suggested;
            suggestedPriceSpan.textContent = '€' + suggestion.suggested;
            similarCountSpan.textContent = suggestion.count;
            suggestionBox.classList.remove('hidden');
        } else {
            suggestionBox.classList.add('hidden');
        }
    }
});
</script>
{% endblock %}
