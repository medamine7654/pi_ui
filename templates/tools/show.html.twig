{% extends 'base.html.twig' %}

{% block title %}{{ tool.name }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <h1>{{ tool.name }}</h1>
        <p class="lead">{{ tool.description }}</p>
        
        <div class="card mt-4">
            <div class="card-body">
                <h5>Tool Details</h5>
                <table class="table">
                    <tr>
                        <th>Price per Day:</th>
                        <td>â‚¬{{ tool.pricePerDay }}</td>
                    </tr>
                    <tr>
                        <th>Stock Quantity:</th>
                        <td>{{ tool.stockQuantity }}</td>
                    </tr>
                    <tr>
                        <th>Location:</th>
                        <td>{{ tool.location }}</td>
                    </tr>
                    <tr>
                        <th>Host:</th>
                        <td>{{ tool.host.name }}</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_tools') }}" class="btn btn-secondary">Back to Tools</a>
        </div>
    </div>
</div>
{% endblock %}
