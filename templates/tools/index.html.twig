{% extends 'base.html.twig' %}

{% block title %}Rent Tools - RentAll{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    {# Hero section #}
    <section class="mb-8 text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
            Rent Tools & Equipment
        </h1>
        <p class="mt-2 text-gray-600">
            Find the perfect tools for your project
        </p>
    </section>

    {# Search and Filter Form #}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        {{ form_start(searchForm, {'attr': {'class': 'space-y-4'}}) }}
            {# Search Query #}
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fa-solid fa-search mr-1"></i> Search
                </label>
                {{ form_widget(searchForm.query) }}
            </div>

            {# Filters Row #}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-tag mr-1"></i> Category
                    </label>
                    {{ form_widget(searchForm.category) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-map-marker-alt mr-1"></i> Location
                    </label>
                    {{ form_widget(searchForm.location) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-euro-sign mr-1"></i> Min Price/Day
                    </label>
                    {{ form_widget(searchForm.minPrice) }}
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-euro-sign mr-1"></i> Max Price/Day
                    </label>
                    {{ form_widget(searchForm.maxPrice) }}
                </div>
            </div>

            {# Sort and Submit Row #}
            <div class="flex flex-col sm:flex-row gap-4 items-end">
                <div class="flex-1">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fa-solid fa-sort mr-1"></i> Sort By
                    </label>
                    {{ form_widget(searchForm.sortBy) }}
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors">
                        <i class="fa-solid fa-search mr-2"></i>Search
                    </button>
                    <a href="{{ path('app_tools') }}" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium transition-colors">
                        <i class="fa-solid fa-times mr-2"></i>Clear
                    </a>
                </div>
            </div>
        {{ form_end(searchForm) }}
    </div>

    {# Results count #}
    <div class="mb-4 text-sm text-gray-600">
        <i class="fa-solid fa-list mr-1"></i>
        {{ tools|length }} {{ tools|length == 1 ? 'tool' : 'tools' }} found
    </div>

    {# Tools grid #}
    <section>
        {% if tools|length > 0 %}
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                {% for tool in tools %}
                    <div class="rounded-lg border border-gray-200 bg-white shadow-sm hover:shadow-md transition-shadow">
                        {# Tool Image #}
                        {% if tool.imageName %}
                            <img src="{{ asset('uploads/tools/' ~ tool.imageName) }}" 
                                 alt="{{ tool.name }}" 
                                 class="w-full h-48 object-cover rounded-t-lg">
                        {% else %}
                            <div class="w-full h-48 bg-gradient-to-br from-purple-100 to-purple-200 rounded-t-lg flex items-center justify-center">
                                <i class="fa-solid fa-wrench text-purple-400 text-5xl"></i>
                            </div>
                        {% endif %}
                        
                        <div class="p-6 space-y-4">
                            {# Category badge #}
                            {% if tool.category %}
                                <div class="mb-2">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                        <i class="{{ tool.category.icon }} mr-1"></i>
                                        {{ tool.category.name }}
                                    </span>
                                </div>
                            {% endif %}
                            
                            {# Tool header #}
                            <div>
                                <h3 class="font-semibold text-lg text-gray-900">{{ tool.name }}</h3>
                                {% if tool.location %}
                                    <p class="text-sm text-gray-500 mt-1">
                                        <svg class="inline h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        </svg>
                                        {{ tool.location }}
                                    </p>
                                {% endif %}
                            </div>

                            {# Tool description #}
                            {% if tool.description %}
                                <p class="text-sm text-gray-600">
                                    {{ tool.description|length > 80 ? tool.description|slice(0, 80) ~ '...' : tool.description }}
                                </p>
                            {% endif %}

                            {# Price and stock #}
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-2xl font-bold text-gray-900">â‚¬{{ tool.pricePerDay }}</p>
                                    <p class="text-xs text-gray-500">per day</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm font-medium {% if tool.stockQuantity > 0 %}text-green-600{% else %}text-red-600{% endif %}">
                                        {{ tool.stockQuantity }} available
                                    </p>
                                </div>
                            </div>

                            {# Host info #}
                            <p class="text-sm text-gray-500">
                                <svg class="inline h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Owned by {{ tool.host.name }}
                            </p>

                            {# View details button #}
                            <a 
                                href="{{ path('app_tool_show', {id: tool.id}) }}"
                                class="block w-full text-center px-4 py-2 rounded-md bg-blue-600 text-white hover:bg-blue-700 font-medium text-sm transition-colors"
                            >
                                View Details
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {# Empty state #}
            <div class="flex flex-col items-center justify-center py-12 text-center">
                <div class="rounded-full bg-gray-100 p-6">
                    <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243 4.243 3 3 0 004.243-4.243zm0-5.758a3 3 0 10-4.243-4.243 3 3 0 004.243 4.243z"/>
                    </svg>
                </div>
                <h3 class="mt-4 text-lg font-medium text-gray-900">No tools found</h3>
                <p class="mt-1 text-gray-600">
                    Check back later for available tools
                </p>
            </div>
        {% endif %}
    </section>
</div>
{% endblock %}
