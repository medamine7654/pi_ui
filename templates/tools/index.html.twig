{% extends 'base.html.twig' %}

{% block title %}Tools{% endblock %}

{% block body %}
<h1>Available Tools</h1>

<div class="row mt-4">
    {% for tool in tools %}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ tool.name }}</h5>
                    <p class="card-text">{{ tool.description|slice(0, 100) }}...</p>
                    <p class="mb-1"><strong>Price:</strong> â‚¬{{ tool.pricePerDay }}/day</p>
                    <p class="mb-1"><strong>Stock:</strong> {{ tool.stockQuantity }} available</p>
                    <p class="mb-3"><strong>Location:</strong> {{ tool.location }}</p>
                    <a href="{{ path('app_tool_show', {id: tool.id}) }}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info">No tools available at the moment.</div>
        </div>
    {% endfor %}
</div>
{% endblock %}
