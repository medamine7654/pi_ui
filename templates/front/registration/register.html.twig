{% extends 'front/base.html.twig' %}

{% block title %}Créer un compte - RentAll{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-8">

        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Créer un compte</h1>
            <p class="text-gray-600 mt-2">
                Rejoignez <span class="font-semibold text-blue-600">RentAll</span>
            </p>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
            {{ form_errors(registrationForm) }}

            <div>
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-600'
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}
                {{ form_widget(registrationForm.plainPassword.first, {
                    'attr': {
                        'class': 'mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-600'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe') }}
                {{ form_widget(registrationForm.plainPassword.second, {
                    'attr': {
                        'class': 'mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-600'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword.second) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <button type="submit"
                class="w-full py-3 px-4 rounded-md bg-blue-600 text-white font-semibold hover:bg-blue-700 transition">
                S'inscrire
            </button>

        {{ form_end(registrationForm) }}

        <div class="mt-6 text-center text-sm">
            Déjà inscrit ?
            <a href="{{ path('app_login') }}" class="text-blue-600 font-medium">Se connecter</a>
        </div>

    </div>
</div>
{% endblock %}

