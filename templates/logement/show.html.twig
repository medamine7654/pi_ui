{% extends 'base.html.twig' %}

{% block title %}{{ logement.titre }} - RentAll{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    {# Image principale #}
    <div class="w-full h-96 bg-gray-200">
        {% if logement.image %}
            <img src="{{ logement.image }}" 
                 class="w-full h-full object-cover" 
                 alt="{{ logement.titre }}">
        {% else %}
            <div class="w-full h-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                <svg class="w-32 h-32 text-white opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
            </div>
        {% endif %}
    </div>

    <div class="container mx-auto px-4 py-8">
        <div class="max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-3 gap-8">
                {# Contenu principal #}
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
                        <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ logement.titre }}</h1>
                        
                        <div class="flex items-center text-gray-600 mb-6">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            {{ logement.adresse }}
                        </div>

                        <div class="flex gap-6 mb-8 pb-8 border-b border-gray-200">
                            <div class="flex items-center">
                                <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                </svg>
                                <span class="font-semibold">{{ logement.nombreChambres }} chambre{{ logement.nombreChambres > 1 ? 's' : '' }}</span>
                            </div>
                            {% if logement.capacite %}
                                <div class="flex items-center">
                                    <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                    <span class="font-semibold">{{ logement.capacite }} voyageurs</span>
                                </div>
                            {% endif %}
                            {% if logement.type %}
                                <div class="flex items-center">
                                    <span class="inline-flex items-center bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
                                        {{ logement.type }}
                                    </span>
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-8">
                            <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
                            <p class="text-gray-700 leading-relaxed">{{ logement.description }}</p>
                        </div>

                        <div class="mb-8">
                            <h2 class="text-2xl font-bold text-gray-900 mb-4">Hébergé par {{ logement.proprietaire.prenom }} {{ logement.proprietaire.nom }}</h2>
                            <div class="flex items-center">
                                <div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                                    {{ logement.proprietaire.prenom|first }}{{ logement.proprietaire.nom|first }}
                                </div>
                                <div class="ml-4">
                                    <p class="font-semibold text-gray-900">{{ logement.proprietaire.prenom }} {{ logement.proprietaire.nom }}</p>
                                    <p class="text-sm text-gray-600">Hôte</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Sidebar - Réservation #}
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-lg p-6 sticky top-24">
                        <div class="mb-6">
                            <div class="flex items-baseline">
                                <span class="text-3xl font-bold text-gray-900">{{ logement.prixParNuit }}€</span>
                                <span class="text-gray-600 ml-2">/ nuit</span>
                            </div>
                        </div>

                        {% if logement.disponible %}
                            <a href="{{ path('app_reservation_new', {id: logement.id}) }}" 
                               class="block w-full bg-blue-600 text-white py-4 rounded-lg hover:bg-blue-700 transition font-bold text-center text-lg shadow-lg mb-4">
                                Réserver
                            </a>
                            <p class="text-center text-sm text-gray-600">Vous ne serez pas débité pour le moment</p>
                        {% else %}
                            <div class="bg-gray-100 text-gray-600 py-4 rounded-lg text-center font-semibold mb-4">
                                Non disponible
                            </div>
                        {% endif %}

                        <div class="border-t border-gray-200 pt-4 mt-4">
                            <div class="flex items-center text-sm text-gray-600 mb-2">
                                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                Annulation gratuite sous 3 jours
                            </div>
                            <div class="flex items-center text-sm text-gray-600">
                                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                Confirmation instantanée
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Bouton retour #}
            <div class="mt-8">
                <a href="{{ path('app_home') }}" 
                   class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Retour aux résultats
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
