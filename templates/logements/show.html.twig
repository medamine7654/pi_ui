{% extends 'base.html.twig' %}

{% block title %}{{ logement.name }} - RentAll{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <div class="max-w-4xl mx-auto">
        {# Back button #}
        <div class="mb-6">
            <a href="{{ path('app_logements') }}" class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Back to Logements
            </a>
        </div>

        {# Property Image #}
        <div class="mb-6">
            {% if logement.imageName %}
                <img src="{{ asset('uploads/logements/' ~ logement.imageName) }}" 
                     alt="{{ logement.name }}" 
                     class="w-full h-96 object-cover rounded-lg shadow-lg">
            {% else %}
                <div class="w-full h-96 bg-gradient-to-br from-purple-100 to-purple-200 rounded-lg flex items-center justify-center">
                    <i class="fa-solid fa-home text-purple-400 text-9xl"></i>
                </div>
            {% endif %}
        </div>

        {# Property Details #}
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 space-y-6">
            {# Header #}
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-gray-900">{{ logement.name }}</h1>
                    <p class="text-lg text-gray-600 mt-2">
                        <i class="fa-solid fa-map-marker-alt mr-1"></i>
                        {{ logement.fullLocation }}
                    </p>
                    {% if logement.category %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800 mt-3">
                            <i class="{{ logement.category.icon }} mr-1"></i>
                            {{ logement.category.name }}
                        </span>
                    {% endif %}
                </div>
                <div class="text-right">
                    <p class="text-4xl font-bold text-purple-600">â‚¬{{ logement.pricePerNight }}</p>
                    <p class="text-sm text-gray-500">per night</p>
                </div>
            </div>

            {# Property Features #}
            {% if logement.numberOfRooms or logement.numberOfBeds or logement.numberOfBathrooms or logement.maxGuests %}
                <div class="border-t pt-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Property Features</h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        {% if logement.numberOfRooms %}
                            <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                                <i class="fa-solid fa-door-open text-2xl text-purple-600"></i>
                                <div>
                                    <p class="text-2xl font-bold text-gray-900">{{ logement.numberOfRooms }}</p>
                                    <p class="text-sm text-gray-600">Rooms</p>
                                </div>
                            </div>
                        {% endif %}
                        {% if logement.numberOfBeds %}
                            <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                                <i class="fa-solid fa-bed text-2xl text-purple-600"></i>
                                <div>
                                    <p class="text-2xl font-bold text-gray-900">{{ logement.numberOfBeds }}</p>
                                    <p class="text-sm text-gray-600">Beds</p>
                                </div>
                            </div>
                        {% endif %}
                        {% if logement.numberOfBathrooms %}
                            <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                                <i class="fa-solid fa-bath text-2xl text-purple-600"></i>
                                <div>
                                    <p class="text-2xl font-bold text-gray-900">{{ logement.numberOfBathrooms }}</p>
                                    <p class="text-sm text-gray-600">Bathrooms</p>
                                </div>
                            </div>
                        {% endif %}
                        {% if logement.maxGuests %}
                            <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                                <i class="fa-solid fa-users text-2xl text-purple-600"></i>
                                <div>
                                    <p class="text-2xl font-bold text-gray-900">{{ logement.maxGuests }}</p>
                                    <p class="text-sm text-gray-600">Guests</p>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            {# Description #}
            {% if logement.description %}
                <div class="border-t pt-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">About this property</h3>
                    <p class="text-gray-700 leading-relaxed">{{ logement.description }}</p>
                </div>
            {% endif %}

            {# Host Info #}
            <div class="border-t pt-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Hosted by</h3>
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full bg-purple-600 text-white flex items-center justify-center text-xl font-bold">
                        {{ logement.host.name|first|upper }}
                    </div>
                    <div>
                        <p class="font-medium text-gray-900">{{ logement.host.name }}</p>
                        <p class="text-sm text-gray-500">Property Host</p>
                    </div>
                </div>
            </div>

            {# Quality Score #}
            <div class="border-t pt-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Quality Score</h3>
                <div class="flex items-center gap-4">
                    <div class="flex-1">
                        <div class="flex items-center justify-between mb-2">
                            <span class="text-sm font-medium text-gray-700">Overall Score</span>
                            <span class="text-sm font-medium {{ qualityScore.rating.textClass }}">{{ qualityScore.percentage }}%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="{{ qualityScore.rating.barClass }} h-2 rounded-full" style="width: {{ qualityScore.percentage }}%"></div>
                        </div>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {{ qualityScore.rating.bgClass }} {{ qualityScore.rating.textClass }}">
                        <i class="fa-solid {{ qualityScore.rating.icon }} mr-1"></i>
                        {{ qualityScore.rating.label }}
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
