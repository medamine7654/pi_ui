{% extends 'base.html.twig' %}

{% block title %}My Favorites{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <i class="fas fa-heart text-red-500 mr-2"></i>
            My Favorites
        </h1>
        <p class="text-gray-600">Your saved services, tools, and properties</p>
    </div>

    {% if services is empty and tools is empty and logements is empty %}
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <i class="fas fa-heart text-gray-300 text-6xl mb-4"></i>
            <h2 class="text-2xl font-semibold text-gray-700 mb-2">No favorites yet</h2>
            <p class="text-gray-500 mb-6">Start adding services, tools, and properties to your favorites!</p>
            <div class="flex gap-4 justify-center">
                <a href="{{ path('app_services') }}" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
                    Browse Services
                </a>
                <a href="{{ path('app_tools') }}" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700">
                    Browse Tools
                </a>
                <a href="{{ path('app_logements') }}" class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700">
                    Browse Properties
                </a>
            </div>
        </div>
    {% else %}
        {% if services is not empty %}
            <div class="mb-12">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">
                    <i class="fas fa-briefcase text-blue-600 mr-2"></i>
                    Favorite Services ({{ services|length }})
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for service in services %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                            {% if service.imageName %}
                                <img src="{{ asset('uploads/services/' ~ service.imageName) }}" 
                                     alt="{{ service.name }}" 
                                     class="w-full h-48 object-cover">
                            {% else %}
                                <div class="w-full h-48 bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                                    <i class="fas fa-briefcase text-white text-6xl"></i>
                                </div>
                            {% endif %}
                            
                            <div class="p-4">
                                <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ service.name }}</h3>
                                
                                <div class="flex gap-2 mb-3">
                                    {% if service.category %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            <i class="fas {{ service.category.icon }} mr-1"></i>
                                            {{ service.category.name }}
                                        </span>
                                    {% endif %}
                                </div>
                                
                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{ service.description }}</p>
                                
                                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                                    <span><i class="fas fa-clock mr-1"></i>{{ service.durationMinutes }} min</span>
                                    <span><i class="fas fa-map-marker-alt mr-1"></i>{{ service.location }}</span>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <span class="text-2xl font-bold text-blue-600">{{ service.basePrice }} TND</span>
                                    <div class="flex gap-2">
                                        <a href="{{ path('app_service_show', {id: service.id}) }}" 
                                           class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 text-sm">
                                            View
                                        </a>
                                        <form method="post" action="{{ path('app_favorites_toggle', {type: 'service', id: service.id}) }}" class="inline">
                                            <button type="submit" class="bg-red-100 text-red-600 px-4 py-2 rounded-lg hover:bg-red-200 text-sm">
                                                <i class="fas fa-heart-broken"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if tools is not empty %}
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-4">
                    <i class="fas fa-tools text-purple-600 mr-2"></i>
                    Favorite Tools ({{ tools|length }})
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for tool in tools %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                            {% if tool.imageName %}
                                <img src="{{ asset('uploads/tools/' ~ tool.imageName) }}" 
                                     alt="{{ tool.name }}" 
                                     class="w-full h-48 object-cover">
                            {% else %}
                                <div class="w-full h-48 bg-gradient-to-br from-purple-400 to-purple-600 flex items-center justify-center">
                                    <i class="fas fa-tools text-white text-6xl"></i>
                                </div>
                            {% endif %}
                            
                            <div class="p-4">
                                <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ tool.name }}</h3>
                                
                                <div class="flex gap-2 mb-3">
                                    {% if tool.category %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                            <i class="fas {{ tool.category.icon }} mr-1"></i>
                                            {{ tool.category.name }}
                                        </span>
                                    {% endif %}
                                </div>
                                
                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{ tool.description }}</p>
                                
                                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                                    <span><i class="fas fa-box mr-1"></i>Stock: {{ tool.stockQuantity }}</span>
                                    <span><i class="fas fa-map-marker-alt mr-1"></i>{{ tool.location }}</span>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <span class="text-2xl font-bold text-purple-600">{{ tool.pricePerDay }} TND/day</span>
                                    <div class="flex gap-2">
                                        <a href="{{ path('app_tool_show', {id: tool.id}) }}" 
                                           class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 text-sm">
                                            View
                                        </a>
                                        <form method="post" action="{{ path('app_favorites_toggle', {type: 'tool', id: tool.id}) }}" class="inline">
                                            <button type="submit" class="bg-red-100 text-red-600 px-4 py-2 rounded-lg hover:bg-red-200 text-sm">
                                                <i class="fas fa-heart-broken"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if logements is not empty %}
            <div class="mb-12">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">
                    <i class="fas fa-home text-indigo-600 mr-2"></i>
                    Favorite Properties ({{ logements|length }})
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for logement in logements %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                            {% if logement.imageName %}
                                <img src="{{ asset('uploads/logements/' ~ logement.imageName) }}" 
                                     alt="{{ logement.name }}" 
                                     class="w-full h-48 object-cover">
                            {% else %}
                                <div class="w-full h-48 bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center">
                                    <i class="fas fa-home text-white text-6xl"></i>
                                </div>
                            {% endif %}
                            
                            <div class="p-4">
                                <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ logement.name }}</h3>
                                
                                <div class="flex gap-2 mb-3">
                                    {% if logement.category %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                            <i class="fas {{ logement.category.icon }} mr-1"></i>
                                            {{ logement.category.name }}
                                        </span>
                                    {% endif %}
                                </div>
                                
                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{{ logement.description }}</p>
                                
                                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                                    {% if logement.numberOfBeds %}<span><i class="fas fa-bed mr-1"></i>{{ logement.numberOfBeds }} beds</span>{% endif %}
                                    <span><i class="fas fa-map-marker-alt mr-1"></i>{{ logement.fullLocation }}</span>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <span class="text-2xl font-bold text-indigo-600">{{ logement.pricePerNight }} TND/night</span>
                                    <div class="flex gap-2">
                                        <a href="{{ path('app_logement_show', {id: logement.id}) }}" 
                                           class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 text-sm">
                                            View
                                        </a>
                                        <form method="post" action="{{ path('app_favorites_toggle', {type: 'logement', id: logement.id}) }}" class="inline">
                                            <button type="submit" class="bg-red-100 text-red-600 px-4 py-2 rounded-lg hover:bg-red-200 text-sm">
                                                <i class="fas fa-heart-broken"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
