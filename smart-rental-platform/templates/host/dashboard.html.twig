{% extends 'base.html.twig' %}

{% block title %}Host Dashboard - RentAll{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Host Dashboard</h1>
        <p class="mt-2 text-gray-600">Manage your listings and reservations</p>
    </div>

    {# Stats overview #}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Listings</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ stats.totalListings ?? 0 }}</p>
                </div>
                <div class="h-12 w-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Active Bookings</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ stats.activeBookings ?? 0 }}</p>
                </div>
                <div class="h-12 w-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Revenue</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">${{ stats.totalRevenue ?? 0 }}</p>
                </div>
                <div class="h-12 w-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                    <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Avg Rating</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ stats.avgRating ?? '0.0' }}</p>
                </div>
                <div class="h-12 w-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="h-6 w-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    {# Quick actions #}
    <div class="mb-8">
        <div class="flex gap-4">
            <a 
                href="{{ path('app_logement_create') }}"
                class="inline-flex items-center px-4 py-2 rounded-md bg-blue-600 text-white hover:bg-blue-700 font-medium text-sm"
            >
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add New Listing
            </a>
            <a 
                href="{{ path('app_tool_create') }}"
                class="inline-flex items-center px-4 py-2 rounded-md border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 font-medium text-sm"
            >
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add Tool
            </a>
        </div>
    </div>

    {# Listings tabs #}
    <div class="bg-white rounded-lg border border-gray-200">
        <div class="border-b border-gray-200 px-6 py-4">
            <h2 class="text-lg font-semibold text-gray-900">Your Listings</h2>
        </div>

        <div class="p-6">
            {% if listings|length > 0 %}
                <div class="space-y-4">
                    {% for listing in listings %}
                        <div class="flex gap-4 p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                            <img 
                                src="{{ listing.images[0] ?? asset('placeholder.svg') }}" 
                                alt="{{ listing.title ?? listing.name }}"
                                class="h-24 w-24 rounded-lg object-cover"
                            >
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-900">{{ listing.title ?? listing.name }}</h3>
                                <p class="text-sm text-gray-500 mt-1">{{ listing.location ?? listing.category }}</p>
                                <div class="mt-2 flex items-center gap-4">
                                    {% import 'components/ui_macros.html.twig' as ui %}
                                    {{ ui.badge(listing.status|capitalize, listing.status == 'active' ? 'success' : 'default') }}
                                    <span class="text-sm text-gray-500">
                                        ${{ listing.pricePerNight ?? listing.pricePerDay }}/{{ listing.pricePerNight is defined ? 'night' : 'day' }}
                                    </span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <a href="{{ path('app_logement_edit', {id: listing.id}) }}" class="text-sm text-blue-600 hover:text-blue-700">Edit</a>
                                <a href="{{ path('app_logement_show', {id: listing.id}) }}" class="text-sm text-gray-600 hover:text-gray-700">View</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <p class="text-gray-500">No listings yet. Create your first listing to get started!</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
